<Window x:Class="HousingManagementApp.EditRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/Редактирование Заявки" Height="400" Width="400">

    <Window.Resources>
        <!-- Подключение внешнего ResourceDictionary с стилями -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Адрес -->
        <TextBlock Text="Адрес:" Grid.Row="0" Margin="10"/>
        <ComboBox x:Name="BuildingCombo" Grid.Row="0" 
                  DisplayMemberPath="Address" 
                  SelectedValuePath="Id" 
                  Margin="120,10,10,10"/>

        <!-- ФИО Заявителя -->
        <TextBlock Text="ФИО Заявителя:" Grid.Row="1" Margin="10"/>
        <ComboBox x:Name="InhabitantCombo" Grid.Row="1" 
                  DisplayMemberPath="FullName" 
                  SelectedValuePath="Id" 
                  Margin="120,10,10,10"/>

        <!-- Телефон -->
        <TextBlock Text="Телефон:" Grid.Row="2" Margin="10"/>
        <TextBox x:Name="PhoneText" Grid.Row="2" IsReadOnly="True" Margin="120,10,10,10"/>

        <!-- Описание проблемы -->
        <TextBlock Text="Описание Проблемы:" Grid.Row="3" Margin="10"/>
        <TextBox x:Name="DescriptionText" Grid.Row="3" Margin="120,10,10,10"/>

        <!-- Ответственный Исполнитель -->
        <TextBlock Text="Ответственный Исполнитель:" Grid.Row="4" Margin="10"/>
        <ComboBox x:Name="EmployeeCombo" Grid.Row="4" 
                  DisplayMemberPath="FullName" 
                  SelectedValuePath="Id" 
                  Margin="120,10,10,10"/>

        <!-- Статус -->
        <TextBlock Text="Статус:" Grid.Row="5" Margin="10"/>
        <ComboBox x:Name="StatusCombo" Grid.Row="5" 
                  DisplayMemberPath="Description" 
                  SelectedValuePath="Id" 
                  Margin="120,10,10,10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="10">
            <Button Content="Сохранить" Click="SaveButton_Click" Style="{StaticResource PageButton}" Margin="5"/>
            <Button Content="Назад" Click="BackButton_Click" Style="{StaticResource PageButton}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>